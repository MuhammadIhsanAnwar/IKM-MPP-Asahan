# Apache Configuration untuk IKM Survey Application
# Compatible dengan shared hosting

# Disable directory listing
<IfModule mod_autoindex.c>
    Options -Indexes
</IfModule>

# Set character encoding
<IfModule mod_charset.c>
    AddDefaultCharset utf-8
</IfModule>

# Blokir akses ke file sensitif
<FilesMatch "\.php$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</FilesMatch>

<FilesMatch "\.(sql|ini|bak|env|config|htaccess)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Blokir akses ke folder tertentu
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Blokir akses langsung ke folder admin/library
    RewriteRule ^(admin|library|css|js|images)/ - [L]
    
    # Redirect ke index.php untuk URL request
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . index.php [L]
</IfModule>

# Set MIME types
<IfModule mod_mime.c>
    AddType application/json .json
    AddType application/javascript .js
    AddType text/css .css
    AddType text/html .html .htm
    AddType text/plain .txt
</IfModule>

# Browser Caching (optional, bisa dinonaktifkan jika ada issue)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 day"
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
</IfModule>

# Disable PHP Execution di folder upload/temp (jika ada)
<IfModule mod_rewrite.c>
    RewriteRule ^(uploads|temp|tmp)/(.*) - [F,L]
</IfModule>
